<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <%= simple_form_for @flat do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :number_of_guests %>
          <%= f.input :price_per_night %>
          <%= f.submit class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>
